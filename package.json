{
  "name": "realtime-voting-app",
  "version": "1.0.0",
  "description": "Real-time voting application built with Cloudflare Workers, Durable Objects, and WebSockets",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erichayth/realtime-voting-app.git"
  },
  "homepage": "https://github.com/erichayth/realtime-voting-app#readme",
  "bugs": {
    "url": "https://github.com/erichayth/realtime-voting-app/issues"
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "create-bucket": "wrangler r2 bucket create survey-qr-codes",
    "reset": "echo 'Update the URL and password in the command below:' && echo 'curl -X POST -H \"Authorization: Bearer YOUR_PASSWORD\" https://your-worker.workers.dev/api/reset'",
    "simulate": "node simulate-votes.js",
    "simulate:help": "node simulate-votes.js --help",
    "generate-qr": "node generate-qr.js",
    "generate-qr:help": "node generate-qr.js --help"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.29.1"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "durable-objects",
    "websocket",
    "survey",
    "voting",
    "real-time",
    "live-polling"
  ],
  "author": "erichayth",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }}
